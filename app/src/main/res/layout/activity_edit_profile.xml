<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:ignore="SpeakableTextPresentCheck">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/menu_top_cornered"
            android:clipToPadding="false"
            android:orientation="vertical"
            android:padding="32dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/editprofPic"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="20dp"
                android:src="@drawable/blankuser"
                app:civ_border_color="@color/GreyMain"
                app:civ_border_width="1dp" />


            <!-- First Name -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/asap_medium"
                android:text="First name"
                android:textColor="@color/Gray" />

            <EditText
                android:maxLines="1"
                android:id="@+id/editproftFirst"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/box_grey_input"
                android:drawableLeft="@drawable/profile"
                android:drawablePadding="10dp"
                android:fontFamily="@font/asap_regular"
                android:paddingHorizontal="15dp"
                android:textSize="15sp" />

            <!-- Last Name -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/asap_medium"
                android:text="Last name"
                android:textColor="@color/Gray" />

            <EditText
                android:maxLines="1"
                android:id="@+id/editproftLast"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/box_grey_input"
                android:drawableLeft="@drawable/profile"
                android:drawablePadding="10dp"
                android:fontFamily="@font/asap_regular"
                android:paddingHorizontal="15dp"
                android:textSize="15sp" />

            <!-- Mobile -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/asap_medium"
                android:text="Mobile Number"
                android:textColor="@color/Gray" />

            <EditText
                android:maxLines="1"
                android:inputType="number"
                android:id="@+id/editprofMobile"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/box_grey_input"
                android:drawableLeft="@drawable/mobile"
                android:drawablePadding="10dp"
                android:fontFamily="@font/asap_regular"
                android:maxLength="11"
                android:paddingHorizontal="15dp"
                android:textSize="15sp" />

            <!-- Street -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/asap_medium"
                android:text="Street name"
                android:textColor="@color/Gray" />

            <EditText
                android:maxLines="1"
                android:id="@+id/editprofStreet"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/box_grey_input"
                android:drawableLeft="@drawable/location"
                android:drawablePadding="10dp"
                android:fontFamily="@font/asap_regular"
                android:paddingHorizontal="15dp"
                android:textSize="15sp" />

            <!-- City -->
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/asap_medium"
                android:text="City"
                android:textColor="@color/Gray" />

            <EditText
                android:maxLines="1"
                android:id="@+id/editprofCity"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/box_grey_input"
                android:drawableLeft="@drawable/location"
                android:drawablePadding="10dp"
                android:fontFamily="@font/asap_regular"
                android:paddingHorizontal="15dp"
                android:textSize="15sp" />

            <!-- Province -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/asap_medium"
                android:text="State/Province"
                android:textColor="@color/Gray" />

            <EditText
                android:maxLines="1"
                android:id="@+id/editprofProvince"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/box_grey_input"
                android:drawableLeft="@drawable/location"
                android:drawablePadding="10dp"
                android:fontFamily="@font/asap_regular"
                android:paddingHorizontal="15dp"
                android:textSize="15sp" />

            <!-- Zip Code -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/asap_medium"
                android:text="Zip code"
                android:textColor="@color/Gray" />

            <EditText
                android:maxLines="1"
                android:inputType="number"
                android:id="@+id/editprofZip"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/box_grey_input"
                android:drawableLeft="@drawable/location"
                android:drawablePadding="10dp"
                android:fontFamily="@font/asap_regular"
                android:maxLength="4"
                android:paddingHorizontal="15dp"
                android:textSize="15sp" />

            <TextView
                android:layout_marginTop="20dp"
                android:id="@+id/btnSave"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/box_secondary"
                android:fontFamily="@font/asap_medium"
                android:gravity="center"
                android:paddingHorizontal="15dp"
                android:text="Update"
                android:textSize="14sp" />

        </LinearLayout>
    </RelativeLayout>
</ScrollView>