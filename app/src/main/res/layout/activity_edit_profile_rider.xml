<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="SpeakableTextPresentCheck"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".EditProfileRiderActivity">



        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@color/Main"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar" />

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:padding="32dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/menu_top_cornered"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/toolbar">

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:id="@+id/editprofPic"
                android:layout_gravity="center"
                android:layout_marginBottom="20dp"
                android:src="@drawable/logo"
                app:civ_border_color="@color/DarkMain"
                app:civ_border_width="2dp"
                />


            <!-- First Name -->
            <TextView
                android:id="@+id/textView13"
                android:fontFamily="@font/inter_regular"
                android:paddingLeft="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="First name"
                android:textColor="@color/MainText"/>

            <com.google.android.material.textfield.TextInputLayout
                android:theme="@style/Widget.Design.TextInputLayout"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginHorizontal="5dp"
                android:elevation="3dp"
                android:background="@drawable/textboxmain"
                app:boxBackgroundColor="@android:color/transparent"
                >
                <com.google.android.material.textfield.TextInputEditText
                    android:fontFamily="@font/inter_regular"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:paddingTop="3dp"
                    android:paddingBottom="4dp"
                    android:inputType="textPersonName"
                    android:textColor="@color/MenuTextColor"
                    android:textSize="14dp"
                    android:id="@+id/editriderFirst"
                    >
                </com.google.android.material.textfield.TextInputEditText>
            </com.google.android.material.textfield.TextInputLayout>
            <!-- Last Name -->
            <TextView
                android:paddingTop="15dp"
                android:id="@+id/textView14"
                android:fontFamily="@font/inter_regular"
                android:paddingLeft="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Last name"
                android:textColor="@color/MainText"/>

            <com.google.android.material.textfield.TextInputLayout
                android:theme="@style/Widget.Design.TextInputLayout"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginHorizontal="5dp"
                android:elevation="5dp"
                android:background="@drawable/textboxmain"
                app:boxBackgroundColor="@android:color/transparent"
                >
                <com.google.android.material.textfield.TextInputEditText
                    android:fontFamily="@font/inter_regular"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"
                    android:inputType="textPersonName"
                    android:textColor="@color/MenuTextColor"
                    android:textSize="14dp"
                    android:id="@+id/editriderLast"
                    >
                </com.google.android.material.textfield.TextInputEditText>
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Mobile Number -->
            <TextView
                android:paddingTop="15dp"
                android:id="@+id/textView16"
                android:fontFamily="@font/inter_regular"
                android:paddingLeft="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mobile Number"
                android:textColor="@color/MainText"/>

            <com.google.android.material.textfield.TextInputLayout
                android:theme="@style/Widget.Design.TextInputLayout"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginHorizontal="5dp"
                android:elevation="3dp"
                android:background="@drawable/textboxmain"
                app:boxBackgroundColor="@android:color/transparent"
                >
                <com.google.android.material.textfield.TextInputEditText
                    android:fontFamily="@font/inter_regular"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:paddingTop="3dp"
                    android:paddingBottom="4dp"
                    android:maxLength="11"
                    android:inputType="number"
                    android:textColor="@color/MenuTextColor"
                    android:textSize="14dp"
                    android:id="@+id/editriderMobile"
                    >
                </com.google.android.material.textfield.TextInputEditText>
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Driver's License -->
            <TextView
                android:paddingTop="15dp"
                android:fontFamily="@font/inter_regular"
                android:paddingLeft="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Driver's License"
                android:textColor="@color/MainText"/>

            <com.google.android.material.textfield.TextInputLayout
                android:theme="@style/Widget.Design.TextInputLayout"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginHorizontal="5dp"
                android:elevation="3dp"
                android:background="@drawable/textboxmain"
                app:boxBackgroundColor="@android:color/transparent"
                >
                <com.google.android.material.textfield.TextInputEditText
                    android:fontFamily="@font/inter_regular"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:paddingTop="3dp"
                    android:paddingBottom="4dp"
                    android:textColor="@color/MenuTextColor"
                    android:textSize="14dp"
                    android:id="@+id/editriderLicense"
                    >
                </com.google.android.material.textfield.TextInputEditText>
            </com.google.android.material.textfield.TextInputLayout>

            <ImageView
                android:layout_marginTop="15dp"
                android:layout_width="290dp"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:background="@color/GreyMain"
                android:id="@+id/editriderLicensePic" />

            <!-- Plate Number -->
            <TextView
                android:paddingTop="15dp"
                android:fontFamily="@font/inter_regular"
                android:paddingLeft="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Plate Number"
                android:textColor="@color/MainText"/>

            <com.google.android.material.textfield.TextInputLayout
                android:theme="@style/Widget.Design.TextInputLayout"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginHorizontal="5dp"
                android:elevation="3dp"
                android:background="@drawable/textboxmain"
                app:boxBackgroundColor="@android:color/transparent"
                >
                <com.google.android.material.textfield.TextInputEditText
                    android:fontFamily="@font/inter_regular"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:paddingTop="3dp"
                    android:paddingBottom="4dp"
                    android:textColor="@color/MenuTextColor"
                    android:textSize="14dp"
                    android:id="@+id/editriderPlate"
                    >
                </com.google.android.material.textfield.TextInputEditText>
            </com.google.android.material.textfield.TextInputLayout>

            <ImageView
                android:layout_marginTop="15dp"
                android:layout_width="290dp"
                android:layout_height="120dp"
                android:layout_gravity="center"
                android:background="@color/GreyMain"
                android:id="@+id/editriderPlatePic" />

            <!-- OR/CR -->
            <TextView
                android:paddingTop="15dp"
                android:fontFamily="@font/inter_regular"
                android:paddingLeft="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="OR/CR"
                android:textColor="@color/MainText"/>

            <ImageView
                android:layout_width="290dp"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:background="@color/GreyMain"
                android:id="@+id/rorcrPic"
                android:layout_marginBottom="30dp"/>

            <Button
                android:id="@+id/btnSave"
                android:layout_width="150dp"
                android:layout_height="35dp"
                android:text="Update"
                android:textAllCaps="false"
                android:padding="1dp"
                android:textColor="@color/MainText"
                android:layout_gravity="center"
                android:layout_marginTop="60dp"
                android:background="@drawable/menubutton"
                android:textStyle="bold"
                android:elevation="5dp"
                android:letterSpacing="-.01"
                android:fontFamily="@font/inter_extrabold" />

        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>