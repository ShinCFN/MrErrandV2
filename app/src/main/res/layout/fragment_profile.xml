<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ProfileFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_marginBottom="100dp"
                android:paddingTop="40dp"
                android:id="@+id/linearLayout3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout4"
                >

                <LinearLayout
                    android:layout_marginBottom="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="30dp"
                    android:background="@drawable/outlined_box"
                    android:orientation="horizontal"
                    android:paddingVertical="20dp"
                    android:paddingHorizontal="15dp">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:elevation="2dp"
                        android:id="@+id/profilePic"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:src="@drawable/blankuser"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_gravity="center"
                        android:layout_marginLeft="30dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/asap_bold"
                            android:textColor="@color/black"
                            android:id="@+id/profileFirst"
                            android:textSize="20sp"/>

                        <TextView
                            android:id="@+id/profileLast"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/asap_bold"
                            android:textColor="@color/black"
                            android:textSize="20sp" />

                    </LinearLayout>

                </LinearLayout>


                <LinearLayout
                    android:layout_marginBottom="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="30dp"
                    android:background="@drawable/outlined_box"
                    android:orientation="vertical"
                    android:paddingVertical="20dp"
                    android:paddingHorizontal="15dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Contact Information"
                        android:fontFamily="@font/asap_bold"
                        android:textSize="20sp"
                        android:textColor="@color/black" />

                    <TextView
                        android:layout_marginTop="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Mobile Number"
                        android:fontFamily="@font/asap_medium"
                        android:textColor="@color/Gray"
                        android:textSize="12sp"/>

                    <TextView
                        android:id="@+id/profileNumber"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/asap_regular"
                        android:textSize="16sp"
                        android:textColor="@color/black" />

                    <TextView
                        android:layout_marginTop="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Email"
                        android:fontFamily="@font/asap_medium"
                        android:textColor="@color/Gray"
                        android:textSize="12sp"/>

                    <TextView
                        android:id="@+id/profileEmail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/asap_regular"
                        android:textSize="16sp"
                        android:textColor="@color/black" />

                </LinearLayout>


                <LinearLayout
                    android:layout_marginBottom="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="30dp"
                    android:background="@drawable/outlined_box"
                    android:orientation="vertical"
                    android:paddingVertical="20dp"
                    android:paddingHorizontal="15dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Address"
                        android:fontFamily="@font/asap_bold"
                        android:textSize="20sp"
                        android:textColor="@color/black" />

                    <TextView
                        android:layout_marginTop="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Street"
                        android:fontFamily="@font/asap_medium"
                        android:textColor="@color/Gray"
                        android:textSize="12sp"/>

                    <TextView
                        android:id="@+id/profileStreet"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/asap_regular"
                        android:textSize="16sp"
                        android:textColor="@color/black" />

                    <TextView
                        android:layout_marginTop="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:text="City"
                        android:fontFamily="@font/asap_medium"
                        android:textColor="@color/Gray"
                        android:textSize="12sp"/>

                    <TextView
                        android:id="@+id/profileCity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/asap_regular"
                        android:textSize="16sp"
                        android:textColor="@color/black" />

                    <TextView
                        android:layout_marginTop="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:text="State/Province"
                        android:fontFamily="@font/asap_medium"
                        android:textColor="@color/Gray"
                        android:textSize="12sp"/>

                    <TextView
                        android:id="@+id/profileProvince"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/asap_regular"
                        android:textSize="16sp"
                        android:textColor="@color/black" />

                    <TextView
                        android:layout_marginTop="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:text="Zip Code"
                        android:fontFamily="@font/asap_medium"
                        android:textColor="@color/Gray"
                        android:textSize="12sp"/>

                    <TextView
                        android:id="@+id/profileZip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/asap_regular"
                        android:textSize="16sp"
                        android:textColor="@color/black" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/profileEdit"
                    android:layout_marginBottom="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="30dp"
                    android:background="@drawable/box_grey"
                    android:orientation="vertical"
                    android:paddingVertical="14dp"
                    android:paddingHorizontal="15dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Edit Profile"
                        android:fontFamily="@font/asap_medium"
                        android:textSize="14sp"
                        android:textColor="@color/DarkMain"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>