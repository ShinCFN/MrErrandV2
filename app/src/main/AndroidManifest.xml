            android:exported="false" />
        <activity
            android:name=".ViewImageActivity"
            android:exported="false" />
        <activity
            android:name=".RatingActivityTowardsRider"
            android:exported="false" />
        <activity
            android:name=".EditProfileRiderActivity"
            android:exported="false"
            android:launchMode="singleInstance" />
